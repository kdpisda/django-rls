# Example environment variables for Django RLS development

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/test_django_rls

# For Docker Compose
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=test_django_rls

# Django Settings
DJANGO_SETTINGS_MODULE=tests.testapp.settings
SECRET_KEY=your-secret-key-for-testing

# Testing
PYTEST_ADDOPTS=--tb=short -v

# Development
DEBUG=True